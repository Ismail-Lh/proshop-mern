{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "ProShop MERN backend API",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "seed": "ts-node src/seeder.ts",
    "seed:destroy": "ts-node src/seeder.ts -d",
    "clean": "rm -rf node_modules",
    "lint": "echo 'No linter configured for backend'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "colors": "^1.4.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "typescript": "^4.9.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^18.0.0",
    "@types/express": "^4.17.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/colors": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
